/* pages/index/index.wxss */
.swiper-image {
  height: 100%;
  width: 100%;
}

.container {
  display: flex;
  justify-content: space-around;
  margin-top: 15px;
}

.item {
  display: flex;
  flex-direction: column;
}

.item .iconfont {
  font-size: 26px;
  height: 40px;
  width: 40px;
  background: #C20C0C;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  line-height: 40px;
}

.item text {
  font-size: 13px;
  text-align: center;
  margin-top: 5px;
}

.hotRec {
  margin-top: 15px;
  height: 275rpx;
}

.RecommendedList {
  display: flex;
  height: 180rpx;
}

.RecommendedList .recItem {
  width: 33.33vw;
  box-sizing: border-box;
  flex-shrink: 0;
  height: 180rpx;
  padding: 0 .7em;
}

.recItem .img-responsive {
  width: 200rpx;
  height: 180rpx;
  object-fit: contain;
  border-radius: 5px;
}

.recItem text {
  font-size: .65em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 新{歌推荐 */
.listContainer {
  padding: 0 15px;
}

.listItem {
  width: 100%;
  height: 100rpx;
  display: flex;
  padding:10rpx 5px;
}

.itemMain {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: space-around;
  margin-left: 40rpx;
}

.itemName {
  font-size: 14px;
  font-weight: 500;
}
.inf{
  font-size:13px;
  color:#999;
  vertical-align: bottom;
  margin-left:.3rem;
}
.itemArt {
  font-size: 12px;
  color: #aaa;
  margin-right:10px;
}

.listItem image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
}


