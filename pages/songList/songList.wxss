.songlistContainer {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.main {
  height: 25%;
  width: 100vw;
  min-height: 300rpx;
  position: relative;
  box-shadow: 0px -3px 14px 0px;
  display: flex;
  align-items: center;
}

.listInfo {
  filter: blur(30px) opacity(.6);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.pic {
  height: 240rpx;
  width: 240rpx;
  flex-shrink: 0;
  border-radius: 15rpx;
  margin-left: 20px;
  z-index: 999;
  position: relative;
}

.info {
  flex: 1;
  z-index: 10;
}
.des{
  height:3.6rem;
}
.list {
  flex: 1;
  width: 100vw;
  box-sizing: border-box;
  padding: 15px;
  overflow: scroll;
}

.description {
  font-size: 12px;
  color: #333;
  margin-left: 20px;
}

.dec {
  font-size: 13px;
  color: #c02020;
  font-weight: 700;
  display: block;
  margin-left: 20px;
  line-height: 1.3em;
}

.font {
  display: block;
  width: 86%;
  line-height: 1.2rem;
  word-spacing: .3rem;
}

.more {
  display: block;
  text-decoration: underline;
  color: blue;
  line-height: 1rem;
  width: 77%;
  text-align: right;
}
.topT{
  margin-left:20px;
  margin-top:1rem;
}
.topT text{
  font-size: 13px;
  font-size: 13px;
  color: #c02020;
  font-weight: 700;
  display: inline-block;
  line-height: 1.3em;
}
.topT .tag {
  margin-left: .8em;
  background: rgba(0, 0, 0, 0.38);
  color: #fff;
  font-size: 12px;
  line-height: 1rem;
  padding: 2px 12px;
  border-radius: 11px;
  display: inline-block;
  font-weight: 400;
}
.item {
  height: 40px;
  display:flex;
}
.songContainer{
  flex:1;
  max-width: 70vw;
}
.num{
  font-size: 14px;
  color:#333;
  margin-right:1rem;  
}
.nameView{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 70%;
}
.songName {
  font-size: 13px;
  color:#333;
  display: block;
  width:80%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.songArt {
  font-size: 12px;
  color: #aaa;
  margin-right: 5px;
  display: inline-block;
}