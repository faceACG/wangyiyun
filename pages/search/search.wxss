.searchBlock {
  width: 100%;
  height: 79rpx;
  padding: 1px;
}

.search {
  height: 56rpx;
  background: #fff;
  border-radius: 20rpx;
  width: 80%;
  border: 1px solid #333;
  margin-left: 1.4rem;
  font-size: 14px;
  padding-left: 1rem;
  box-sizing: border-box;
}

.icon-sousuo {
  position: absolute;
  top: 0px;
  right: 10px;
  font-size: 27px;
}

.hotSearch {
  font-size: 15px;
  margin: 10px;
  color: red;
  font-weight: 500;
}

.hots {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 5px;
}

.hots-item {
  width: 50%;
  height: 1.6em;
  font-size: 13px;
  padding-left: 4em;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999;
}

.song-item {
  font-size: 13px;
  color: #555;
  margin-left: 30px;
  height: 2.5em;
  margin-top: 6px;

}

.alname{
  font-size: 12px;
  color: #ccc;
  width:80%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.al{
  margin-right: 5px;
}