.songDetail {
  height: 100vh;
  display: flex;
  justify-content: center;
  position: relative;
}
.bgImg {
  position: absolute;
  height: 100vh;
  width:100vw;
  filter: blur(30px) opacity(0.6);
}
.main {
  height: 400rpx;
  width: 400rpx;
  border-radius: 50%;
  border: 3px solid #fff;
  position: relative;
  top:40%;
  transform:translate(0,-50%);
}
.img {
  height: 100%;
  width: 100%;
  border-radius: 50%;
}
.playing{
  animation: play 10s linear infinite;
}

.Ring{
  width: 400rpx;
  height: 400rpx;
  position: absolute;
  border-radius: 50%;
  top: -1px;
  left: -1px;
  border: 1px solid rgb(143, 208, 238);
}
.play{
  animation: ScaleRing 4s 2s infinite;
}

.playContral {
  position: fixed;
  bottom: 0;
  height: 60px;
  width: 100vw;
  box-shadow:0px 3px 13px 0px;
  background: #ccc;
  opacity: .4;
  display:flex;
  justify-content: space-between;
  align-items:flex-end;
  box-sizing: border-box;
  padding:0 20px 15px;
}
.playContral .iconfont{
  font-size: 25px;
  font-weight:bold;
  color:#FFF;
}
.lyrics{
  height:calc(100vh - 50px);
  overflow:scroll;
}
.lrc{
  display: block;
  max-height:300vh;
  padding-top:20px;
  margin-bottom:50px;
  font-size: 15px;
  text-align:center;
  line-height: 2.5rem;
  white-space: .3rem;
}
.playContral .icon-play1,.playContral .icon-zanting1{
  font-size: 28px;
}
@keyframes ScaleRing {
  from {
    transform: scale(1);
    opacity: 1;
  }
  to {
    transform: scale(1.3);
    opacity: 0;
  }
}
@keyframes play {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg)
  }
}